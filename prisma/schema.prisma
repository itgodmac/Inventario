generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  // Identification
  sku         String?  @unique
  barcode     String?
  itemCode    String?
  uniCode     String?
  photoId     String?
  
  // Names
  name        String
  nameEn      String?
  nameEs      String?
  
  // Metadata
  uvaNombre   String?
  category    String?
  montaje     String?
  tipo        String?
  description String?
  image       String?
  
  // Excel Specific (Columns N, Q, R)
  rotacion    String?
  notes       String?
  pedido      String?
  
  // Stats & Pricing
  stock       Int      @default(0)
  physicalStock Int?   // Physical count from inventory audits
  price       Float    @default(0) // $ Venta (Col M)
  priceZG     Float    @default(0) // $ ZG (Col S)
  priceOth    Float    @default(0) // $ Oth (Col T)
  priceBM     Float    @default(0) // $ BM (Col U)
  ptijDll     Float    @default(0) // $ Ptij dll (Col V)
  ptijMxn     Float    @default(0) // $ Ptij mxn (Col W)
  vecesG      Float    @default(0) // Veces G (Col X)
  
  status      String   @default("out-of-stock")
  
  // Audit
  lastAuditor String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  // Indexes for faster search
  @@index([name])
  @@index([barcode])
  @@index([sku])
}

model SystemSettings {
  key         String   @id
  value       Float
  description String?
  updatedAt   DateTime @updatedAt
}

model StockLog {
  id          String   @id @default(uuid())
  productId   String
  productSku  String?
  productName String
  
  // Stock Change
  oldQuantity Int
  newQuantity Int
  difference  Int
  
  // Audit
  auditor     String   @default("TEST")
  timestamp   DateTime @default(now())
  
  @@index([timestamp])
}

model PrintQueue {
  id        String   @id @default(uuid())
  productId String
  createdAt DateTime @default(now())
}
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String    @default("auditor")
  accounts      Account[]
  sessions      Session[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
