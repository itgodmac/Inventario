{
    "id": "com.bigmaterials.cataloggenerator",
    "name": "BigMaterials Catalog Generator",
    "version": "1.0.0",
    "manifestVersion": 5,
    "main": "index.html",
    "host": {
        "app": "ID",
        "minVersion": "18.0"
    },
    "entrypoints": [
        {
            "type": "panel",
            "id": "catalogPanel",
            "label": {
                "default": "BigMaterials Catalog"
            }
        }
    ],
    "requiredPermissions": [
        {
            "name": "network",
            "description": "Fetch product data from API"
        },
        {
            "name": "localFileSystem",
            "description": "Download and store product images"
        }
    ],
    "icons": [
        {
            "width": 24,
            "height": 24,
            "path": "icons/icon.png"
        }
    ]
}